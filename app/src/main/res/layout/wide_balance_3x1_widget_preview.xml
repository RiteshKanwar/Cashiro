<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wide_widget_background_theme"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Total"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2,450.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF93B887"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23 transactions"
            android:textSize="11sp"
            android:textColor="#C0C0C0" />

    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/add_item_bulk"
        android:background="@drawable/widget_add_button_background_theme"
        android:contentDescription="Add Transaction"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="#FFF"
        android:padding="8dp" />

</RelativeLayout>